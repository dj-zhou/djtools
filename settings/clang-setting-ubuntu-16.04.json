// to use .clang-format in the project folder, set the following
// Clang_format_style: file
{
    "files.hotExit": "onExit",
    "editor.tabSize": 4,
    "workbench.editor.enablePreview": false,
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.clang_format_path": "/opt/clang+llvm-9.0.0-x86_64-linux-gnu-ubuntu-16.04/bin/clang-format",
    "editor.detectIndentation": false,
    "files.autoSave": "afterDelay",
    "clang.executable": "/opt/clang+llvm-9.0.0-x86_64-linux-gnu-ubuntu-16.04/bin/clang",
    "workbench.iconTheme": "vscode-icons",
    "editor.fontSize": 16,
    "editor.formatOnSave": true,
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "git-commit",
        "go",
        "handlebars",
        "haskell",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pug",
        "python",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml"
    ],
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "Clang_format_style": "file",
    "clang-format.assumeFilename": "~/.config/Code/User/.clang-format"
}